@{
  Layout = "_Layout";
}
@using MusicOrganizer.Models;

<h3>Your Collection</h3>
@if(Model.Count == 0)
{
  <p>You don't have any records in your collection!</p>
}
<ul>
  @foreach(Record record in Model)
  {
    <li><a href="/record/@record.Id">@record.Title</a></li>
  }
</ul>

<a href="/record/new">Add an Album!</a>


